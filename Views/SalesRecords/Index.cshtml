@{
    ViewData["Title"] = "Sales Records";
}

<h2><img src="https://img.icons8.com/color/48/000000/c-sharp-logo-2.png"/>@ViewData["Title"]</h2>

<div class="card text-white bg-success mb-3" style="max-width: 20rem;">
    <div class="row">
        <div class="col-md-10">
            <form class="form-horizontal" asp-action="SimpleSearch">
                <fieldset>
                    <legend><img src="https://img.icons8.com/dusk/64/000000/futurama-bender--v2.png"/>Simple search</legend>
                    <div class="form-group">
                        <label for="minDate" class="col-lg-2 control-label" style="max-width: fit-content">Min Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="maxDate" class="col-lg-2 control-label" style="max-width: fit-content">Max Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

<div class="card text-white bg-info mb-3" style="max-width: 20rem;">
    <div class="row">
        <div class="col-md-10">
            <form class="form-horizontal" asp-action="GroupingSearch">
                <fieldset>
                    <legend><img src="https://img.icons8.com/dusk/64/000000/futurama-bender--v2.png"/>Grouping search</legend>
                    <div class="form-group">
                        <label for="minDate" class="col-lg-2 control-label" style="max-width: fit-content">Min Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="maxDate" class="col-lg-2 control-label" style="max-width: fit-content">Max Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>