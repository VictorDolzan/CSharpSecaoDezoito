    <h4 class="card-title">Seller</h4>
    <hr />
    <dl class="d1-horizontal">
        <dt class="btn btn-success disabled" style="margin-bottom: 10px">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
           <input class="form-control" id="readOnlyInput" type="text" placeholder="@Html.DisplayFor(model => model.Name)" readonly=""> 
        </dd>
        <dt class="btn btn-warning disabled" style="margin-bottom: 10px">
           @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
           <input class="form-control" id="readOnlyInput" type="text" placeholder="@Html.DisplayFor(model => model.Email)" readonly=""> 
        </dd>
