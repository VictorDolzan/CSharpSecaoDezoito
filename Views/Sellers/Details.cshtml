@model CSharpSecaoDezoito.Models.Seller

@{
    ViewData["Title"] = "Details";
}

<h2><img src="https://img.icons8.com/color/48/000000/c-sharp-logo-2.png"/>@ViewData["Title"]</h2>

<div class="card text-white bg-info mb-3" style="max-width: 20rem;">
